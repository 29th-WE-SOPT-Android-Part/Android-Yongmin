<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:text="SOPTHub"
        android:textColor="#F06292"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/allerta"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_home_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="나이"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_name"
        app:layout_constraintStart_toStartOf="@+id/tv_home_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name" />

    <TextView
        android:id="@+id/tv_home_age2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="25"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_name2"
        app:layout_constraintStart_toStartOf="@+id/tv_home_name2"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name2" />

    <TextView
        android:id="@+id/tv_home_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="MBTI"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_age"
        app:layout_constraintStart_toStartOf="@+id/tv_home_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_age" />

    <TextView
        android:id="@+id/tv_home_mbti2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ESTJ"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_age2"
        app:layout_constraintStart_toStartOf="@+id/tv_home_age2"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_age2" />

    <TextView
        android:id="@+id/tv_home_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/allerta"
        android:text="안녕하세요 25살 권용민입니다"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_home_git"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_mbti2"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="@+id/tv_home_mbti" />

    <TextView
        android:id="@+id/tv_home_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/allerta"
        android:text="권용민"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-30dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_title"
        app:layout_constraintStart_toStartOf="@+id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_title"
        app:srcCompat="@drawable/myface" />

    <ImageButton
        android:id="@+id/bt_home_git"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bt_git" />

</androidx.constraintlayout.widget.ConstraintLayout>